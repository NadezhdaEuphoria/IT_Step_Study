&:before,
&:after
  content: " ";
  display: table;

&:after
  clear: both;

.calendar
  width 60px * 7;
  font-size: 24px;
  border: solid 3px #afafaf;
  border-radius: 0px 0px 10px 0px;
.calendar-head
  @include clearfix();
  div
    float: left;
    width: 60px;
    text-align: center;
    color: #7b7b7b;


.calendar-body {
  @include clearfix();
  div {
    position: relative;
    float: left;
    box-sizing: border-box;
    width: 60px - 8px;
    height: 60px - 8px;
    margin: 4px;
    padding-top: 60px/ 5;
    border-radius: 7px;
    text-align: center;
    background: #d98963;
    color: #3b3b3b;
    &.no-day {
      background: none;
    }
    &.cur-day {
      background: #fd7741;
      color: #fff;
    }
  }
}



