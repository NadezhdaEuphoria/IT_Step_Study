.mobile__btn
  display none

.hero
  &__title
    font-size: 47.3392px;
    line-height: 59px;
    color: #2E47A6
    width 10%

  &__lang
    transform rotate(-90deg)
    height 20px
    margin-top 10%

    & > a
      font-size: 16px;
      line-height: 20px;
      color: #828282;
      text-transform uppercase
      font-weight 500

    & > a:hover
      color #2E47A6

  &__img
    margin 0 auto

  &__texts
    margin-top 7%

  &__text p
    text-align center
    width 90%

.menu
  display flex
  flex-direction row
  justify-content space-between
  flex-wrap wrap
  margin-top 50px
  padding 50px 0 30px 0

  & > a
    color: #828282;
    font-weight 500

.border
  border-bottom 1px solid grey

  & a:hover
    color black

#active
  color black
  font-weight 600

#active2
  display none

.contacts
  background-color #FF4644
  margin-top -3%

  &__title
    padding-top 10%
    font-size: 34px;
    line-height: 42px;
    text-align: center;

  &__des
    font-size: 18px;
    line-height: 22px;
    text-align: center;
    margin 2% auto
    width 30%

  &__btn
    background-color black
    border-radius 5rem
    padding 1rem 3rem
    font-size: 18px;
    line-height: 22px;
    text-align: center;
    color: #FFFFFF;
    margin 4% auto
    display flex
    flex-direction column
    align-items center
    border 2px solid black

  &__btn:focus, &__btn:active, &__btn:hover
    outline none
    background-color transparent
    border 2px solid white

  &__icons
    display flex
    justify-content space-between
    width 30%
    margin 5% auto


  &__links
    font-size: 14px;
    line-height: 17px;
    text-align: center;
    color: #bcaaa4;

.social
  width 30%
  display flex
  justify-content space-between


.space
  width 260vw



.hero__text
  width 100%
  height 20%
  color black
  display flex
  justify-content flex-start
  flex-wrap wrap
  margin 0 auto


.hero__text p
  text-align left


.hero__col, .hero__col2, .hero__col3
  display flex
  border-bottom 2px solid grey
  margin 0 auto
  align-items center
  height 100%


.hero__text button, .hero__text2 button, .registration__btn button
  border 2px solid darkslategrey
  color darkslategrey
  font-family Arial
  background transparent
  border-radius .2rem
  padding 1rem 3rem
  text-transform uppercase


.hero__text2
  margin-left 5rem
