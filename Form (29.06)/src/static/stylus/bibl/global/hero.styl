.registration__btn button
  padding 1rem 10rem
  margin 0 auto


button:focus, button:hover
  background orange
  cursor pointer
  outline none
  border 2px solid white
  color white
  box-shadow 0px 10px 13px -7px #000000, 5px 5px 15px 5px rgba(0, 0, 0, 0)


