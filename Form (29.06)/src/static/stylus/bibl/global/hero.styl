.ball
  position absolute
  width 100px
  height 100px
  top 50%
  left 50%
  transform translate(-50px, -50px)

.light
  &__wrap
    margin-top 10%
    width 100%
    height 80%
    display flex
    justify-content center
    align-items center

    &__block
      width 90%
      height 40%
      display flex
      border 3px solid #555555
      border-radius 2rem
      justify-content center
      align-items center

      &__circle
        width 50%
        height 50%
        display flex
        flex-direction row
        background-color #555555
        border 3px solid #555555
        border-radius 6rem
        margin 2%

