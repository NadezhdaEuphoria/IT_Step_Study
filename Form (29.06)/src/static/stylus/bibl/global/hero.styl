.modal
  width 100%
  height 100%
  background rgba(0, 0, 0, .8);
  display flex
  position absolute
  left 0vw
  top 215vh

  &__window
    margin-top 10%
    width 50%
    height 20%
    background wheat
    display flex
    justify-content center
    align-items center
    flex-wrap wrap
    position absolute
    left 22vw
    top 10vh
    border-radius .5rem

    &__h1
      flex-basis 100%
      display flex
      justify-content center
      align-items center

      &__close
        margin-top -50px
        margin-right -20px
        text-align center
        padding .3rem .5rem
        text-transform uppercase
        border 2px solid orange
        border-radius .5rem
        background transparent
        font-weight 700
        color orange

    &__btn
      padding 1rem 14rem
      text-transform uppercase
      border 2px solid orange
      border-radius .5rem
      background transparent
      font-weight 700
      color orange
      margin-bottom 2%


